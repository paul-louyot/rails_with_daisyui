    %pattern.text-slate-200#books-200{:fill => "none", :height => "50", :patternunits => "userSpaceOnUse", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 48 48", :width => "50", :x => "0", :y => "0"}

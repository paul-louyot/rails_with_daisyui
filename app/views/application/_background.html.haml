    %pattern.text-slate-100#books-100{:fill => "none", :height => "50", :patternunits => "userSpaceOnUse", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 48 48", :width => "50", :x => "0", :y => "0"}
      %path{:d => "M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25", "stroke-linecap" => "round", "stroke-linejoin" => "round", :transform => "translate(12, 12)"}
    %radialgradient#circleGradient{:cx => "50%", :cy => "50%", :r => "10%", :gradientUnits => "userSpaceOnUse"}
      %stop{:offset => "0%", "stop-color" => "white"}
      %stop{:offset => "80%", "stop-color" => "white"}
      %stop{:offset => "100%", "stop-color" => "black"}
    %mask#circleMask
      %rect{:fill => "url(#circleGradient)", :height => "100%", :width => "100%"}
  %rect{:x => "0", :y => "0", :width => "100%", :height => "100%", :fill => "url(#books-100)"}
  %rect.mouse-only{:x => "0", :y => "0", :width => "100%", :height => "100%", :fill => "url(#books-200)", :mask => "url(#circleMask)"}

:javascript
  document.addEventListener('mousemove', (event) => {
      const gradient = document.getElementById('circleGradient');
      const { clientX, clientY } = event;

      const cx = (clientX / window.innerWidth) * 100;
      const cy = (clientY / window.innerHeight) * 100;

      setTimeout(() => {
        gradient.setAttribute('cx', `${cx}%`);
        gradient.setAttribute('cy', `${cy}%`);
      }, 100);

  });
